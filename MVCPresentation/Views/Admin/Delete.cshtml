@model MVCPresentation.Models.ApplicationUser

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div style="margin-top : 70px; margin-left:70px; ">

        <h3>Are you sure you want to delete this Item?</h3>
        <hr />

        <div style="float:left ; width:50%;">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GivenName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GivenName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FamilyName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FamilyName)
                </dd>

                <dd>
                    <ul>
                        @foreach (string r in ViewBag.Roles)
                        {
                            <li>
                                <strong>
                                    @r
                                </strong>
                            </li>
                        }
                    </ul>
                </dd>


            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" style="width : 100px;" />

            }

        </div>


        <p style="clear: left" ;>
            @Html.ActionLink("Back to List", "Index")
        </p>
</div>
</body>
</html>
